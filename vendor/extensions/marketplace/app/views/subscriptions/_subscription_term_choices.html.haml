%p Expiry Date
#subscription_term
  -end_of_this_year = Date.new(Date.today.year, 12, 31).to_s
  -end_of_next_year = Date.new(Date.today.year+1, 12, 31).to_s
  =f.radio_button :expires_on, end_of_this_year
  =f.label "expires_on_#{end_of_this_year.gsub('-','')}", 'End of this year'
  %br
  =f.radio_button :expires_on, end_of_next_year
  =f.label "expires_on_#{end_of_next_year.gsub('-','')}", 'End of next year'
