%h1 Edit Subscription

-if params[:subscription]
  - case params[:subscription][:membership_type]
  - when 'casual'
    - @subscription.membership_type = 'casual'
    =render 'casual_membership_form'
  - when 'full'
    - @subscription.membership_type = 'full'
    =render 'full_membership_form'
- else
  =render 'select_membership_type_form'



