%h1 Reader: #{@reader.name}
%p
  =link_to 'edit', edit_admin_reader_path(@reader)
  =link_to 'edit membership id', edit_admin_readers_plu_path(@reader)

%p
  -cols = %w[nzffa_membership_id email phone mobile fax organisation notes description post_line1 post_line2 region postcode post_organisation post_city post_province post_country]
  -cols.each do |col|
    =col
    \:
    =@reader[col]
    %br
%h1 Subscription

-if @subscription.blank?
  %p 
    no active subscription.
    =link_to 'Create Subscription', new_admin_reader_subscription_path(@reader)
-else
  =render 'subscriptions/subscription'

  %p
    =link_to 'Edit the subscription', edit_admin_subscription_path(@subscription)
%p
  =link_to('View Orders', "/admin/readers/#{@reader.id}/orders")
