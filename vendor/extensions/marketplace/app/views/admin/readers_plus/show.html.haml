%h1 Reader: #{link_to(@reader.name, "/admin/readers/#{@reader.id}")}
%p
  =link_to 'edit', edit_admin_reader_path(@reader)
  =link_to 'edit_plus', edit_admin_readers_plu_path(@reader)
%p
  nzffa_membership_id: #{@reader.nzffa_membership_id}

%h1 Subscription

-if @subscription.blank?
  %p 
    no active subscription.
    =link_to 'Create Subscription', new_admin_reader_subscription_path(@reader)
-else
  =render 'subscriptions/subscription'

  %p
    =link_to 'Edit the subscription', edit_admin_subscription_path(@subscription)
%p
  =link_to('View Orders', "/admin/readers/#{@reader.id}/orders")
