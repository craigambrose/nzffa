%h1 Adverts
%table
  %thead
    %th Owner
    %th Title
    %th Category
    %th Snippet
    %th Price
    %th Expires On
    %th show
    %th edit
    %th destroy
  %tbody
    -@adverts.each do |advert|
      %tr
        %td=advert.reader.name if advert.reader
        %td=advert.title
        %td=advert.category
        %td=advert.snippet
        %td=advert.price
        %td=advert.expires_on
        %td=link_to 'show', [:admin, advert]
        %td=link_to 'edit', [:edit, :admin, advert]
        %td=link_to 'destroy', [:admin, advert], :method => :delete, :confirm => "Really delete advert titled: '#{advert.title}'?"
