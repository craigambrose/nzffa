%h1 Adverts
%table#adverts.index
  %thead
    %th Owner
    %th Title
    %th Category
    %th Snippet
    %th Expires On
    %th edit
    %th destroy
  %tbody
    -@adverts.each do |advert|
      %tr
        %td=advert.reader.organisation if advert.reader
        %td=advert.title
        %td=advert.categories.join(', ')
        %td=advert.snippet
        %td=advert.expires_on
        %td=link_to 'edit', [:edit, :admin, advert]
        %td=link_to 'destroy', [:admin, advert], :method => :delete, :confirm => "Really delete advert?"
