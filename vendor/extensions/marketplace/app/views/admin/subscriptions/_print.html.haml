.section
  %h3 Subscription Renewal / Tax Invoice - #{@subscription.begins_on.strftime('%B')} - #{@subscription.expires_on.strftime('%B %Y')}
  %p &nbsp;
  %table.recipient
    %tr
      %td
        .envelope-window
          =@reader.name
          %br
          =simple_format @reader.postal_address.to_a.join("\n")
      %td
        Membership id: #{@reader.nzffa_membership_id}
        %br
        Telephone:
        =@reader.phone
        %br

        -if @reader.has_real_email_address?
          Email:
          =@reader.email
        -else
          Please provide email address
          =text_field_tag :email_address

        -if @reader.full_nzffa_member?
          -unless @reader.receive_nzffa_members_newsletter?
            %br
            =check_box_tag :subscribe_to_nzffa_newsletter
            Tick to receive the NZFFA newsletter

-if @subscription.membership_type == 'full'
  =render 'print_account_full_member'
-else
  =render 'print_account_casual_member'


.section
  - if @reader.is_direct_debit?
    %p Based on your payment last year, the following will be debited from your bank account on [date]. If you want to change the arrangement or the amount, please contact us before that date
  .payment-box
    %h3 Remittance Advice - Invoice #{@subscription.expires_on.year.to_s}-#{@reader.nzffa_membership_id}
    %table.payment
      %tr
        %td{:colspan => 4}
      %tr
        %td
          =check_box_tag :direct_debit
          Direct Debit
        %td
          =check_box_tag :cheque
          Cheque
        %td
          =check_box_tag :visa
          Visa
        %td
          =check_box_tag :master_card
          Mastercard

    %table.payment
      %tr
        %td{:colspan => 4}
          %table.creditcard
