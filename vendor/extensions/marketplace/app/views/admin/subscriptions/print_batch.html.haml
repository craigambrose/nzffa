:css
  .nzffa-logo {
    float: left;

  }
  body {
    font-size: 10pt;
  }

  h1 {
    margin-top: 10px;
    margin-bottom: 10px;
  }

  h4 {
    margin-top: 10px;
    margin-bottom: 10px;
  }

  table {
    margin-top: 10px;
    margin-bottom: 10px;
    font-size: 8pt;
  }
  .section {
    padding: 5px;
    margin: 5px;
  }

  .payment-options {
    width: 100%;
  }
  .payment-box {
    line-height: 3em;
    border: 1px solid #000
  }
  .payment {
    width: 100%;
  }
  .creditcard {
    width: 70%;
    height: 2em;
  }
  .bx {
    border: 1px solid #000
  }
  @media all {
    .page-break	{ display: none; }
  }

  @media print {
    .page-break	{ display: block; page-break-before: always; }
  }

-@unsaved_orders.each do |order|
  -@order = order
  -@subscription = order.subscription
  -@reader = @subscription.reader
  =render :partial => 'print'
  %hr
