:css

  .envelope-window {
    width: 40em;
  }

  .header td {
    vertical-align: top;
  }

  .recipient {
    width: 100%;
  }
  td.logo {
    width: 5em;
  }
  .nzffa-logo-box img {
    float: left;
    width: 2cm;

  }
  body {
    margin: 2em;
    font-size: 10pt;
  }

  h1, h2, h3, h4 {
    margin-top: 10px;
    margin-bottom: 10px;
  }


  table {
    margin-top: 10px;
    margin-bottom: 10px;
    font-size: 8pt;
  }

  .current_subscription {
    width: 100%;
  }

  table td{
    vertical-align: top;
  }
  .section {
    padding: 5px;
    margin: 5px;
  }

  .payment-options {
    width: 100%;
  }
  .payment-box {
    border: 1px solid #000
  }
  .payment {
    width: 100%;
  }
  .creditcard {
    width: 70%;
    height: 2em;
  }
  .bx {
    border: 1px solid #000
  }
  @media all {
    .page-break	{ display: none; }
  }

  @media print {
    .page-break	{ display: block; page-break-before: always; }
  }
