%h2 #{@branch.name} Members

=link_to 'Email Members', "mailto:#{current_reader.email}?bcc=#{@readers.map(&:email).join(',')}"
%table{:class => 'px1'}
  %thead
    %th nzffa id
    %th Forename
    %th Surname
    %th Email
    %th Phone
    %th Mobile
    %th Last Updated
    %th Edit
  %tbody
    -@readers.each do |reader|
      %tr
        %td=reader.nzffa_membership_id
        %td=reader.forename
        %td=reader.surname
        %td=reader.email
        %td=reader.phone
        %td=reader.mobile
        %td=reader.updated_at
        %td=link_to('Edit', branch_admin_edit_path(params[:branch_id], reader.nzffa_membership_id))

