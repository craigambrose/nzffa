%h2 #{@group.name} Members

=link_to "Current Member Email Addresses", branch_admin_email_path(params[:group_id])
%br
=link_to "Current Members Spreadsheet", branch_admin_members_csv_path(params[:group_id])
%br

-if params[:group_id].to_i == NzffaSettings.fft_marketplace_group_id
  =link_to "Past FFT members", branch_admin_past_fft_members_csv_path
-else
  =link_to "Past Members Spreadsheet", branch_admin_past_members_csv_path(params[:group_id])
  %br
  =link_to "Past Members Last Year Only Spreadsheet", branch_admin_last_year_members_csv_path(params[:group_id])
%br

%table{:class => 'px1'}
  %thead
    %th nzffa id
    %th Forename
    %th Surname
    %th Email
    %th{:style => 'width: 100px'} Phone
    %th{:style => 'width: 100px'} Mobile
    %th Last Updated
    %th Edit
  %tbody
    -@readers.each do |reader|
      %tr
        %td=reader.nzffa_membership_id
        %td=reader.forename
        %td=reader.surname
        %td=reader.email
        %td=reader.phone
        %td=reader.mobile
        %td=l reader.updated_at.to_date
        %td=link_to('Edit', branch_admin_edit_path(params[:group_id], reader.nzffa_membership_id))

