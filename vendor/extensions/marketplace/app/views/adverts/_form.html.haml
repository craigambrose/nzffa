-form_for @advert, :html => {:multipart => true} do |f|
  =f.error_messages
  %p
    =f.label :title
    %br
    =f.text_field :title
  %p
    =f.label :body
    %br
    =f.text_area :body
  %p
    =f.label :category
    %br
    =select_tag 'advert[categories]', options_for_select(Advert::CATEGORIES, f.object.categories)
  %p
    =f.label :image
    %br
    =f.file_field :image
  =f.submit

:javascript
  $('#advert_categories').select2()
