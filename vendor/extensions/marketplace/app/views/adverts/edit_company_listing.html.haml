%h1 Your Company Listing
%p Your company listing never expires

-form_for @advert, :html => {:multipart => true} do |f|
  =f.error_messages
  =f.hidden_field :is_company_listing
  %p
    =f.label :categories
    =select_tag 'advert[categories]', options_for_select(Advert::CATEGORIES, f.object.categories), :multiple => true
  %p
    =f.label :price
    =f.text_field :price
  %p
    =f.label :title
    =f.text_field :title
  %p
    =f.label :body
    =f.text_area :body
  %p
    =f.label :image
    =f.file_field :image
  %p
    =f.submit
