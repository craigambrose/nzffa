%table{:style => "width:100%"}
  %tbody
    - @adverts.each do |advert|
      -if advert.is_company_listing?
        =render :partial => 'company_listing_line', :locals => {:advert => advert}
      -else
        =render :partial => 'advert_line', :locals => {:advert => advert}
      %tr
        %td{:colspan => 2}
          %hr
%br
= will_paginate @adverts
