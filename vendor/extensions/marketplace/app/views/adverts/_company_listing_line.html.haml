%tr{:style => 'vertical-align:top'}
  %td
    %table
      %tr
        %td{:colspan => 2}
          %b.title=advert.reader.organisation
          =advert.reader.region
          %br
          =advert.business_description
      %tr
        %td
          -if advert.reader.contact_person.present?
            %b Contact person:
            #{advert.reader.contact_person}
            %br
          -if advert.reader.phone.present?
            %b Phone number:
            #{advert.reader.phone}
          -if advert.reader.fax.present?
            ,
            %b Fax number:
            #{advert.reader.fax}
          -if advert.reader.mobile.present?
            ,
            %b Mobile number:
            #{advert.reader.mobile}
            %br
          -if advert.reader_postal_address.present?
            %b Postal address:
            #{advert.reader_postal_address}
            %br
          -if advert.reader_physical_address.present?
            %b Physical address:
            #{advert.reader_physical_address}
            %br
          -if advert.reader.email.present?
            %b Email address:
            #{advert.reader.email}
            %br
          -if advert.website.present?
            -url = advert.website
            -unless advert.website =~ /^http:\/\//
              - url = 'http://'+advert.website
            %b Website:
            #{link_to(advert.website, url, :target => '_blank')}
        %td
          -if advert.timber_species.present?
            %b Timber species:
            =advert.timber_species.split(',').join(', ')
            %br

          -if advert.supplier_of.present?
            %b Supplier of:
            =advert.supplier_of.split(',').join(', ')
            %br
          -if advert.timber_for_sale.present?
            %b Timber for sale:
            =advert.timber_for_sale.split(',').join(', ')
            %br
          -if advert.buyer_of.present?
            %b Buyer of:
            =advert.buyer_of.split(',').join(', ')
            %br
          -if advert.services.present?
            %b Services:
            =advert.services.split(',').join(', ')
