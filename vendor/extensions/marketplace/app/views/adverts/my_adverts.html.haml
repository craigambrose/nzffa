-#%h1 My Adverts
-#-if @company_listing
  -#=link_to 'Edit my company listing', [:edit_company_listing, :adverts]
  -#%br
-#-else
  -#=link_to 'Create my company listing', [:edit_company_listing, :adverts]
  -#%br

%table
  %thead
    %th Title
    %th Categories
    %th Snippet
    %th Expires On
    %th edit
    %th destroy
  %tbody
    -@adverts.each do |advert|
      %tr
        %td=link_to advert.title, advert
        %td=advert.categories.join(', ')
        %td=advert.snippet
        %td=advert.expires_on
        %td=link_to 'Extend Expiry', [:extend, advert], :method => :put
        %td=link_to 'Edit', [:edit, advert]
        %td=link_to 'Destroy', advert, :method => :delete, :confirm => "Really delete advert titled: '#{advert.title}'?"

-#=link_to 'Create Advert', [:new, :advert]
