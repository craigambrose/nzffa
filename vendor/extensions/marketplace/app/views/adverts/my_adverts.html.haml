%table
  %thead
    %th Title
    %th Categories
    %th Snippet
    %th Expires On
    %th Extend
    %th Edit
    %th Delete
  %tbody
    -@adverts.each do |advert|
      %tr
        %td=link_to advert.title, advert
        %td=advert.categories.join(', ')
        %td=advert.snippet
        %td=advert.expires_on
        %td=link_to 'Extend', [:renew, advert], :method => :put, :confirm => "This will extend your advert expiry until #{1.month.from_now.to_date}"
        %td=link_to 'Edit', [:edit, advert]
        %td=link_to 'Delete', advert, :method => :delete, :confirm => "Really delete advert titled: '#{advert.title}'?"

