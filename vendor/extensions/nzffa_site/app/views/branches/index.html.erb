<h1>Listing branches</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Secretary</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Cell</th>
    <th>Fax</th>
    <th>E-mail</th>
  </tr>

<% @branches.each do |branch| %>
  <tr class="<%= cycle("white_row", "dark_row") %>">
    <td><%=h branch.name %></td>
    <td><%= link_to h(branch.secretary.name), edit_person_path(branch.secretary) if branch.secretary %></td>
    <td><%=h branch.address %></td>
    <td><%=h branch.phone %></td>
    <td><%=h branch.cell %></td>
    <td><%=h branch.fax %></td>
    <td><%=h branch.email %></td>
    <td><%= link_to 'Show', branch %></td>
    <td><%= link_to 'Edit', edit_branch_path(branch) %></td>
    <td><%= link_to 'Destroy', branch, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New branch', new_branch_path %>