<div id="login_area">  
  <% if current_user %>  
    <%# link_to "Edit profile", edit_user_path(:current) %>
    <%= current_user.email %> | 
    <%= link_to_remote "Logout", :update => "login_area", :url=>logout_path %>
  <% else %>  
    <%# link_to "Register", new_user_path %>  
    <%# link_to "Log in", login_path %>
    
    
    
    <% remote_form_for UserSession.new, :update => "login_area" do |f| %>
      <%= f.error_messages %>
      <p>
        <%= f.label :email, "E-mail" %>
        <%= f.text_field :email, :size => 15 %>
        
        <%= f.label :password %>
        <%= f.text_field :password, :size => 15 %>
        <%= f.submit "Log in" %></p>
    <% end %>
    
    <% if @user_session && !@user_session.errors.empty? %>
        <div class="error">Wrong e-mail and/or password.</div>
    <% end %>
    Sign up by posting an advert.
    
  <% end %>
  <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</div>