<div style="padding: 0 20px 0 20px">
<div style="float:right; padding: 20px; text-align:right;">
    <%= link_to 'Back to Marketplace', adverts_path %>
    <br><br>
    <% if authorized_for? @advert %>
        <%= link_to 'Delete', @advert, :method => :delete, :confirm => "Really Delete?" %> |
        <%= link_to 'Edit', edit_advert_path(@advert) %>
    <% end %>
</div>
<p>
  <h1>Showing advert</h1>
  <br>
  <%= ad_type_badge(@advert.ad_type) %>
  <!-- <h1 class="main title"><%= @advert.title %></h1> -->
  <b class="main title"><%=h @advert.title %></b>
</p>
<p>
  <%= image_tag(@advert.image.url(:medium)) %>
</p>
<p>
  <%=h @advert.location %>
</p>
<p>
  <%=h number_to_currency(@advert.dollars) %>
</p>
<p>
  <%= mail_to @advert.person.email, "Send e-mail", :encode => :hex, :subject => @advert.title %>
</p>
<p>
  <%=make_pretty h(@advert.body) %>
</p>

</div>