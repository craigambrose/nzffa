<div style="padding: 0 20px 20px 20px">
<div style="float:right; padding: 20px; text-align:right;">
    <%= link_to 'Back to Marketplace', adverts_path %>
    <br>
</div>
<h1>New advert</h1>

<% render(:layout => "form_content") do %>
    <% if !current_user %>
        <br>
        <h1>New User</h1>
        <% fields_for @user do |f| %>
            <%= f.error_messages %>
            <p>
              <%= f.label :email %><br />
              <%= f.text_field :email %>
            </p>
            <p>
              <%= f.label :password %><br />
              <%= f.password_field :password %>
            </p>
            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation %>
            </p>
            <br>
            <p>
              <%= f.label :first_name, "First name (optional)" %><br />
              <%= f.text_field :first_name %>
            </p>
            <p>
              <%= f.label :last_name, "Last name (optional)" %><br />
              <%= f.text_field :last_name %>
            </p>
            <p>
              <%= f.label :phone, "Phone number (optional)" %><br />
              <%= f.text_field :phone %>
            </p>
        <% end %>
    <% end %>
<% end %>

<br>
</div>